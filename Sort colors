class Solution {
public:
    
     void sortColors(vector<int>& arr) {
      int i = 0, mid = 0, h = arr.size()-1;
        while(mid<=h)
        {
            switch (arr[mid]){
                case 0:
                    swap(arr[i++],arr[mid++]);
                    break;
                case 1:
                    mid++;
                    break;
                case 2:
                    swap(arr[mid],arr[h--]);
            }
        }
        
    }
};
